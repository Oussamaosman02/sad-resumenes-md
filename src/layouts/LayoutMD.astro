---
const { minutesRead, title } = Astro.props.frontmatter;
---

<!DOCTYPE html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='shortcut icon' href='favicon.svg' type='image/x-icon' />
    <title>{title}</title>
  </head>
  <body>
    <button>
      <a
        href='https://oscarmaestre.github.io/apuntes_sad/tema_cortafuegos/tema_cortafuegos.html'
        target='_blank'
        rel='noopener noreferrer'
      >
        Docs Oficiales</a
      >
    </button>
    <br />
    <p>{minutesRead}</p>
    <button>
      <a href='/'> Volver</a>
    </button>
    <br/>
    
    <button>
      <a href='/resumen/ejercicios'> Ejercicios</a>
    </button>
    <slot />
  </body>
</html>
<style>
  * {
    padding: 0%;
    margin: 0%;
    box-sizing: border-box;
  }
  html {
    padding: 0%;
    margin: 0%;
    min-height: 100vw;
  }
  body {
    width: 90%;
    margin:0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding: 0 20px;
  }
  a {
    color: inherit;
    text-decoration: none;
  }
  button {
    border: none;
    border-radius: 10px;
    background-color: #0000ffcc;
    color: #f5f5f5;
    font-weight: 900;
    padding: 5px 10px;
    transition: all 0.5s;
  }
  button:hover {
    background-color: #0000ff88;
  }
</style>
